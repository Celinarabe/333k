@using Rabe_Celina_HW5.Controllers

@model Rabe_Celina_HW5.Models.Repository


<h2>Detailed Search</h2>
<form asp-action="DisplaySearchResults" asp-controller="Home" method="get">

    <div class="form-group">
        <label>Name:</label>
        <input name="SearchName" class="form-control" />

    </div>
    <div class="form-group">
        <label> Description:</label>
        <input name="SearchDescription" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Choose a Language:</label>
        @Html.DropDownList("LanguageSelected", (MultiSelectList)ViewBag.AllLanguages, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <label>Number of Stars:</label>
        <input name="SearchStars" class="form-control" />
    </div>

    <div class="form-group">
        <label class="radio"> @Html.RadioButton("SelectedSortOrder", SortOrder.GreaterThan)Greater Than</label>
        <label class="radio"> @Html.RadioButton("SelectedOrder", SortOrder.LessThan)Less Than</label>
    </div>

    <div class="form-group">
        <label>Select a date: </label>
        <input type="date" name="SelectedDate" class="form-control" />
    </div>


    <button type="submit" class="btn btn-danger">Search</button>
</form>

